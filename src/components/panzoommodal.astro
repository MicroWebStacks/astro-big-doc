---
import {existsSync,readFileSync} from 'fs'
import { suid } from '@/libs/utils';


export interface Props {
    url: string;
    filepath:string;
}

const {url,filepath} = Astro.props as Props;
const uid = suid()

const innerHTML = existsSync(filepath)?readFileSync(filepath).toString():await Astro.slots.render('default');
console.log(filepath)
console.log(existsSync(filepath))
//TODO hadle imag differently by injeting it with an obj
const isSvg = true

---
<div class="modal-background" data-uid={uid}>
  <div class="modal">
    <div class="modal-header close">
      <span class="close-x">&times;</span>
    </div>
    <div class="modal-content">
      <div class="modal-center">
        {isSvg?
          <Fragment set:html={innerHTML} />:
          <object data={url} />
        }
      </div>
    </div>
  </div>
</div>

<style >
.modal-background{
  display: none;
  position: fixed;
  z-index: 1;
  padding-top: 5vh;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: black;
  background-color: rgba(0,0,0,0.4);
}
.modal-background.visible{
  display: block;
}
.modal {
  background-color: #fefefe;
  margin: auto;
  padding: 5px;
  border: 1px solid #888;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width:90vw;
  height:90vh;
}
.modal-header{
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: stretch;
  border-radius: 5px;
  width:100%;
}
.modal-content{
  overflow: hidden;
  width:100%;
  height:100%;
  display:flex;
  justify-content: center;
  align-items: center;
}
.close-x {
  color: #aaa;
  font-size: 20px;
  font-weight: bold;
}
.modal-header:hover {
  text-decoration: none;
  cursor: pointer;
  background:#ddd;
}
.modal-header:hover > span{
  color: #000;

}
</style>

<style is:inline>
  .header > svg{
  height: 16px;
  width: 16px;
  margin:0px;
  padding:2px;
  fill:#aaa;
}
.header:hover > svg{
  fill:rgb(56, 56, 56);
}

</style>

<script define:vars={{uid}} type="module">
import '/astro-big-doc/panzoom.js';
  let state = "init"
  let pzref = null
  const zoomOptions = {
    minZoom: 0.1,
    maxZoom:4
    }

  const background = document.querySelector(`.modal-background[data-uid="${uid}"]`)
  const close = background.querySelector(".close")
  const content = background.querySelector(".modal-content")
  console.log(content)
  function initModal(){
    const center = background.querySelector(".modal-center")
    const svg = center.querySelector("svg")
    //const item = center.parentElement.parentElement.parentElement.parentElement
    //const object = item.querySelector(".itemimage").querySelector("object")
    //console.log(object.shadowRoot)//TODO could not catch shdowRoot
    pzref = panzoom(svg,zoomOptions)
  }


  close.onclick = ()=>{
      pzref.dispose()
      background.classList.remove("visible")
    }
    //TODO custom event from item open modal
    //TODO issue first mousedown without move does not pan zoom
    content.onmousemove = (e)=>{
    if(content.getAttribute("data-init") != "done"){
      content.setAttribute("data-init","done")
      initModal()
    }
  }
</script>
