---
import raw_menu from "../config/menu.json"
import { process_menu_tree } from "../components/menu_utils";
import SubMenu from "./SubMenu.astro";
const side_menu = process_menu_tree(Astro.url,raw_menu)
---
{side_menu.visible &&
    <nav data-width="20vw" data-state="open">
        <SubMenu items={side_menu.items} />
    </nav>
}
<style>
nav{
    background: #252526;
    overflow-x: hidden;
    overflow-y: auto;
    transition: width 0.5s;
    width:20vw;
    flex-shrink: 0;
    scrollbar-color: rebeccapurple  green;
}
nav::-webkit-scrollbar {
  width: 1rem;
}
nav::-webkit-scrollbar-track {
  background: #252526; 
}
nav::-webkit-scrollbar-thumb {
  background: #464647; 
}
nav::-webkit-scrollbar-thumb:hover {
  background: #515151; 
}


</style>

