---
import {assetToUrl, getMetaData} from '@/libs/assets.js'
import Panzoom from '@/components/panzoom/panzoom.astro'

export interface Props {
    node: object;
    dirpath: string;
}

const { node, dirpath} = Astro.props as Props;
const {title, url, alt} = node;

console.log(`url / dirpath = ${url} / ${dirpath}`)
const asseturl = await assetToUrl(url, dirpath)
const meta = await getMetaData(url, dirpath)
console.log(`asseturl = ${asseturl}`)
---
<Panzoom src={asseturl} alt={alt} title={title} meta={meta}/>
