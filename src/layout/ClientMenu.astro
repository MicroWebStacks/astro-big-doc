---
import './colors.css';

---


<style is:global>

    a.menu-nav{
        padding:0px;
        padding-left:0px;
        text-decoration: none;
        user-select: none;    
        color:var(--content-color);
        display:block;
    }
    /* active when nav menu item is matching url */
    a.menu-nav.active{
        background-color: var(--menu-active-color);
    }
    a.menu-nav.parent{
        display:flex;
        align-items:center;
    }
    span.menu-nav.icon{
        cursor:pointer;
        padding:5px;
        flex-grow:0;
    }
    span.menu-nav.text{
        padding:10px;
        padding-top:5px;
        padding-bottom:5px;
        flex-grow:1;
        display:flex;
        align-items: center;
    }
    a.menu-nav.parent > span.text{
        padding-left: 0px;
    }

    span:not(.text).menu-nav.icon > svg{
        width:10px;
        height:10px;
        rotate: 0deg;
        transition: rotate .4s ease-in-out;
    }
    span.menu-nav.icon > svg{
        width:16px;
        height:16px;
    }
    a.menu-nav.parent.expanded > span:not(.text) > svg{
        rotate: 90deg;
    }
    span.menu-nav.icon:hover{
        background-color: var(--menu-span-hover-color);
    }

    span.menu-nav.href_hover:hover{
        background-color: var(--menu-span-hover-color);
    }
    ul.menu-nav{
        display:flex;
        flex-direction: column;
        list-style: none;
        margin:0px;
        padding: 0px;
    }
    ul.menu-nav.nested{
        border-top:   0px;
        border-left:  1px solid var(--menu-border-left-color);
        border-right: 0px;
        border-bottom:0px;
        margin-left: 9px;
        overflow: hidden;
        max-height: 200vh;
        transition-property: max-height;
        transition-duration: 0.4s;
    }
    ul.menu-nav.nested.hidden{
        max-height: 0px;
        transition-property: max-height;
        transition-duration: 0.4s;
    }
    li.menu-nav{
        min-width: 130px;
    }
    object.menu-nav.hidden{
        display:flex;
        visibility: collapse;
    }
    ul.menu-nav.root > li{
        margin: 5px;
        /*box-shadow: 1px 1px 2px 1px #41414077;*/
        border-radius: 5px;
        overflow: hidden;
    }
   
</style>


<script>
    import {inject_menu} from "./client_menu"
    await inject_menu()
</script>
