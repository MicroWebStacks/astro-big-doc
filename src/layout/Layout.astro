---
import AppBar from './AppBar.astro';
import NavTree from './NavTree.astro';
import Hamburger from '../icons/hamburger.astro';
import Arrows from '../icons/arrows.astro';

export interface Props {
	title: string;
}
const { title } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body >
		<div class="fixed-nav">
			<div style="width:10px; height:12px"/>
			<Arrows/>
		</div>
		<div class="appbar-nav_content-footer">
			<AppBar/>
			<div class="nav-content">
				<NavTree/>
	 			<div class="content">
					<slot/>
				</div>
			</div>
			<footer>
				<p>footer</p>
			</footer>
		</div>
	</body>
</html>

<style>
body{
	margin:0;
	font-family: Arial, Helvetica, sans-serif;
	display:flex;
	flex-direction: row;
}
.fixed-nav{
	width:3em;
	background-color: #555;
	height:100vh;
	display:flex;
	flex-direction: column;
	justify-content: start;
	align-items: center;
	overflow: hidden;
}
.hamburger{
	cursor: pointer;
}
.appbar-nav_content-footer{
	display:flex;
	flex-direction: column;
	flex-grow:1;
}
.nav-content{
	display:flex;
	flex-direction: row;
	flex-grow:1;
	max-height:92vh;
}
.content{
	background-color: aquamarine;
	flex-grow:1;
	overflow:auto;
}
footer{
	background-color: rgb(175, 210, 165);
	text-align: center;
	height:3vh;
	overflow: hidden;
}
footer p{
	margin:6px;
}
</style>

<script is:inline>
	const fixed_nav = document.getElementsByClassName("hamburger")[0]
	fixed_nav?.addEventListener("click",(e)=>{
		const nav = document.getElementsByTagName("nav")[0]
		if((nav.style.width == "30vw")||(nav.style.width == "15vw")||(nav.style.width == "")){
			nav.style.width = "0vw"
		}else{
			nav.style.width = nav.getAttribute("data-width")
		}
		console.log(nav.style.width)
		e.preventDefault()
	})
</script>
