<svg viewBox="0 0 200 110" width="40" height="25" fill="#00000000">
    <path class="arrow left"  d="M 70,10 L 40,50   L 70,90"  stroke-width="30px" stroke="#d0d0d0" stroke-linecap="round"></path>
    <path class="arrow right" d="M 130,10 L 160,50 L 130,90" stroke-width="30px" stroke="#d0d0d0" stroke-linecap="round"></path>
</svg>

<style>
.arrow{
    cursor:pointer;
}
</style>

<script is:inline>
    const left = document.getElementsByClassName("left")[0]
    left.addEventListener("click",(e)=>{
		const nav = document.getElementsByTagName("nav")[0]
        let width = nav.getAttribute("data-width")
		if(width == "30vw"){
			nav.style.width = "15vw"
            nav.setAttribute("data-width","15vw")
		}else if(width == "15vw"){
			nav.style.width = "0vw"
            nav.setAttribute("data-width","0vw")
        }
		e.preventDefault()
    })
    const right = document.getElementsByClassName("right")[0]
    right.addEventListener("click",(e)=>{
		const nav = document.getElementsByTagName("nav")[0]
        let width = nav.getAttribute("data-width")
		if(width == "0vw"){
			nav.style.width = "15vw"
            nav.setAttribute("data-width","15vw")
		}else if(width == "15vw"){
			nav.style.width = "30vw"
            nav.setAttribute("data-width","30vw")
        }
		e.preventDefault()
    })
</script>
