---
import ToCSubMenu from "./ToCSubMenu.astro";

export interface Props {
  items: Array<Object>;
}

let { items,parent_click } = Astro.props;
---
<nav data-width="20vw" data-state="open">
    <ToCSubMenu items={items} />
</nav>

<style>
nav{
    background: #252526;
    overflow-x: hidden;
    overflow-y: auto;
    transition: width 0.5s;
    width:20vw;
    flex-shrink: 0;
    scrollbar-color: rebeccapurple  green;
}
nav::-webkit-scrollbar {
  width: 1rem;
}
nav::-webkit-scrollbar-track {
  background: #252526; 
}
nav::-webkit-scrollbar-thumb {
  background: #464647; 
}
nav::-webkit-scrollbar-thumb:hover {
  background: #515151; 
}


</style>

