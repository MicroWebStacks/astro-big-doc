---
//https://ellodave.dev/blog/article/using-svgs-as-astro-components-and-inline-css/
import {existsSync,readFileSync} from 'fs'
import SvgIcons from '@/components/svgicons.astro'
export interface Props {
  'data-filename': string;
  'data-filedir': string;
}

const { 'data-filename':filename,'data-filedir':filedir } = Astro.props as Props;
const filepath = `${filedir}/${filename}`
console.log(`SvgPz ===> : ${filepath}`)

const innerHTML = existsSync(filepath)?readFileSync(filepath).toString():await Astro.slots.render('default');
---
<div class="container" data-filename={filename}>
  <div class="header open">
    <SvgIcons filename="full-screen"/>
  </div>
  <div class="figure">
    <Fragment set:html={innerHTML} />
  </div>
  <div class="modal-background">
    <div class="modal">
      <div class="modal-header close">
        <span class="close-x">&times;</span>
      </div>
      <div class="modal-content">
        <!-- modal-center needed otherwise svg being a flex item distords panzoom coordinates -->
        <div class="modal-center">
          <!-- SVG clone will be placed here -->
        </div>
      </div>
    </div>
  </div>
</div>

<style >
.container{
  background: white;
  border-radius: 5px;
  display:flex;
  
  justify-content: flex-start;
  gap:0px;
  flex-direction: column;
  align-items: flex-start;
  padding:5px;
  box-shadow: 4px 2px 8px 4px rgba(81, 81, 81, 0.5);
  width:fit-content;
}
.header{
  display:flex;
  flex-direction: row;
  justify-content: center;
  background:white;
  align-items: stretch;
  width:98%;/* not clear why right side padding is ignored */
  padding: 2px;
  border-radius: 5px;
}
.header:hover{
  background:#ddd;
  cursor: pointer;
}

.figure{
  display: flex;
}
.modal-background{
  display: none;
  position: fixed;
  z-index: 1;
  padding-top: 5vh;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: black;
  background-color: rgba(0,0,0,0.4);
}
.modal {
  background-color: #fefefe;
  margin: auto;
  padding: 5px;
  border: 1px solid #888;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width:90vw;
  height:90vh;
}
.modal-header{
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: stretch;
  border-radius: 5px;
  width:100%;
}
.modal-content{
  overflow: hidden;
  width:100%;
  height:100%;
  display:flex;
  justify-content: center;
  align-items: center;
}
.close-x {
  color: #aaa;
  font-size: 20px;
  font-weight: bold;
}
.modal-header:hover {
  text-decoration: none;
  cursor: pointer;
  background:#ddd;
}
.modal-header:hover > span{
  color: #000;

}
</style>

<style is:inline>
  .header > svg{
  height: 16px;
  width: 16px;
  margin:0px;
  padding:2px;
  fill:#aaa;
}
.header:hover > svg{
  fill:rgb(56, 56, 56);
}

</style>

<script define:vars={{ filename }} type="module" >
	import '../../node_modules/panzoom/dist/panzoom';
  let pzref = null
  const zoomOptions = {
    minZoom: 0.1,
    maxZoom:4
    }
  const container = document.querySelector(`.container[data-filename="${filename}"]`)
  const open = container.querySelector(".open")
  const modal = container.querySelector(".modal-center")
  const modalBkg = container.querySelector(".modal-background")
  const close = modalBkg.querySelector(".close")

  function openModal(){
    modalBkg.style.display = "block"
    const svg = container.querySelector(".figure").firstElementChild
    const svgModal = svg.cloneNode(true)
    modal.appendChild(svgModal)
    pzref = panzoom(svgModal,zoomOptions)
  }
  function closeModal(){
    modalBkg.style.display = "none"
    const svgModal = modal.querySelector("svg")
    pzref.dispose()
    svgModal.remove()
  }

  open.onclick = ()=>{
    openModal()
  }
  close.onclick = ()=>{
    closeModal()
  }
  modalBkg.onclick = (event)=>{
    if(event.target == modalBkg){
      closeModal()
    }
  }
</script>
