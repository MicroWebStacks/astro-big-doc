---
import {relAssetToUrl} from '@/libs/utils'
import ImageDirective from './image/ImageDirective.astro';

export interface Props {
    node: object;
    filepath: string;
}

const { node, filepath} = Astro.props as Props;

const is_image = (node.name == "image")
const is_other = !is_image

let asseturl = ""
if(is_image){
  asseturl = await relAssetToUrl(node.attributes.src, filepath)
}

---
{is_image &&
  <ImageDirective src={asseturl} node={node} />
}
{is_other &&
  <div>{node.name}
    {Object.keys(node.attributes).map((key)=>(<span>{key} = {node.attributes[key]}</span>))}
  </div>
}
