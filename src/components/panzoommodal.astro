---
import {existsSync,readFileSync} from 'fs'
import { suid } from '@/libs/utils';


export interface Props {
    url: string;
}

//TODO currently all pazoom items do create and ship html for svg
//this is because the parent object .shadowRoot could be be captured to be cloned within a free Svg
//A free Svg instead of object is important in panzoom to keep interactivity enbaled
//object would require to pass mouse events to allow panzoom which disables interactivity

const {url} = Astro.props as Props;

const baseUrl = import.meta.env.BASE_URL.slice(0, -1)
const uid = suid()

---
<div class="modal-background" data-uid={uid} data-state={"init"}>
  <div class="modal">
    <div class="modal-header close">
      <span class="close-x">&times;</span>
    </div>
    <div class="modal-content">
      <div class="modal-center" data-url={url}>
        <!-- injected svg or img on modal init -->
      </div>
    </div>
  </div>
</div>

<style >
.modal-background{
  display: none;
  position: fixed;
  z-index: 1;
  padding-top: 5vh;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: black;
  background-color: rgba(0,0,0,0.4);
}
.modal-background.visible{
  display: block;
}
.modal {
  background-color: #fefefe;
  margin: auto;
  padding: 5px;
  border: 1px solid #888;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width:90vw;
  height:90vh;
}
.modal-header{
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: stretch;
  border-radius: 5px;
  width:100%;
}
.modal-content{
  overflow: hidden;
  width:100%;
  height:100%;
  display:flex;
  justify-content: center;
  align-items: center;
}
.close-x {
  color: #aaa;
  font-size: 20px;
  font-weight: bold;
}
.modal-header:hover {
  text-decoration: none;
  cursor: pointer;
  background:#ddd;
}
.modal-header:hover > span{
  color: #000;

}
</style>

<style is:inline>
  .header > svg{
  height: 16px;
  width: 16px;
  margin:0px;
  padding:2px;
  fill:#aaa;
}
.header:hover > svg{
  fill:rgb(56, 56, 56);
}

</style>

<script type="module">
  const baseUrl = import.meta.env.BASE_URL.slice(0, -1)
  await import(`${baseUrl}/panzoom.js`)
  //await import(`/astro-big-doc/panzoom.js`)
  let pzref = null
  const zoomOptions = {
    minZoom: 0.1,
    maxZoom:4,
    //autocenter:true
  }

  function appendShadowSVG(center,text){
    const shadowRoot = center.attachShadow({mode: 'open'});
    const div = document.createElement("div")
    shadowRoot.appendChild(div)
    div.insertAdjacentHTML( 'beforeend', text )
    const svg = div.querySelector("svg")
    svg.setAttribute("style","user-select: none; cursor:grab;")
    svg.querySelectorAll('tspan,text').forEach((el)=>{
        el.style.cursor = "pointer";
    });    
  }

  async function initPanZoom(center){
    await fetchAsset(center)

    const shadowRoot = center.shadowRoot
    const url = center.getAttribute("data-url")
    const isSvg = url.endsWith(".svg")
    //console.log("creating panzoom")
    if(isSvg){
      const svg = shadowRoot.querySelector("svg")
      pzref = panzoom(svg,zoomOptions)
    }else{
      const image = shadowRoot.querySelector("img")
      pzref = panzoom(image,zoomOptions)
    }
  }

  async function fetchAsset(center){
    //console.log("fetching asset")
    const url = center.getAttribute("data-url")
    //console.log(url)
    const isSvg = url.endsWith(".svg")
    if(isSvg){
      const svg = center.querySelector("svg")
      if(!svg){
        const resp = await fetch(url)
        const text = await resp.text()
        appendShadowSVG(center,text)
      }
    }else{
      const img = center.querySelector("img")
      if(!img){
        const resp = await fetch(url)
        const blob = await resp.blob()
        const imgObjURL = URL.createObjectURL(blob)
        const imgElement = document.createElement('img')
        imgElement.src = imgObjURL
        center.appendChild(imgElement)
      }
    }
  }

  async function initModal(event){
    //console.log("initModal start")
    if(pzref){
      pzref.dispose()
    }
    const modal = event.target
    const close = modal.querySelector(".close")
    const center = modal.querySelector(".modal-center")
    await initPanZoom(center)
    modal.classList.add("visible")
    close.onclick = ()=>{
      //console.log("closed click")
      modal.classList.remove("visible")
      pzref.dispose()
      const svg = center.querySelector("svg")
      if(svg){
        svg.remove()
      }
      const img = center.querySelector("img")
      if(img){
        img.remove()
      }
    }
    //console.log("initModal end")
  }

  const modalsbkgs = document.querySelectorAll(`.modal-background`)
  const modals = [...modalsbkgs]
  for(let el in modals){
    const modal = modals[el]
    if(modal.getAttribute("data-state") == "init"){
      modal.addEventListener("init",initModal  ,false)
      modal.setAttribute("data-state","run")
    }
  }

</script>
